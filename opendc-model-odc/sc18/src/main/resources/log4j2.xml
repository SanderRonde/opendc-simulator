<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %level %msg%n" />
        </Console>
        <File name="File" fileName="data/opendc.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="org.hibernate" level="info" additivity="false">
            <AppenderRef ref="Console" level="error" />
            <AppenderRef ref="File" level="info" />
        </Logger>

        <Logger name="com.atlarge.opendc" level="info" additivity="false">
            <AppenderRef ref="Console" level="warn" />
            <AppenderRef ref="File" level="info" />
        </Logger>

        <!-- Experiment runner can log on INFO level -->
        <Logger name="com.atlarge.opendc.model.odc.platform.SC18PlatformRunner" level="debug" additivity="false">
            <AppenderRef ref="Console" level="info" />
            <AppenderRef ref="File" level="debug" />
        </Logger>

        <Root level="error">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>
